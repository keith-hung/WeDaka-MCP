{
  "name": "wedaka-mcp-server",
  "version": "0.1.0",
  "description": "WeDaka MCP Server - TypeScript Implementation",
  "main": "dist/index.js",
  "bin": {
    "wedaka-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "npx tsc",
